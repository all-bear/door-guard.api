{
  "compilerOptions": {
    "alwaysStrict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "~src/*": ["./src/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
